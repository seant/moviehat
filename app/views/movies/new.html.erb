
<%= render :partial => 'shared/date_picker', :locals => {:css_class => "date-pick"} %>

<h1>New movie</h1>

<% form_for(@movie) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :release_date %><br />
    <%= f.text_field :release_date, :class=>"date-pick  dp-applied" %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :genre %><br />
    <%= f.select :genre_id, genre_select_options  %>
  </p>
  <p>
    <%= f.label :imdb_link %><br />
    <%= f.text_field :imdb_link %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', movies_path %>
