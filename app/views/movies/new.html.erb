<h1>New movie</h1>

<% form_for(@movie) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :release_date %><br />
    <%= f.date_select :release_date %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :genre %><br />
    <%= f.select :genre_id, genre_select_options  %>
  </p>
  <p>
    <%= f.label :imdb_link %><br />
    <%= f.text_field :imdb_link %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', movies_path %>
